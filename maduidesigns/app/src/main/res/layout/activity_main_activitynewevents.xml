<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:background="@drawable/background_gradient"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity3events">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    >

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_back_24"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/task"
        android:layout_width="222dp"
        android:layout_height="39dp"
        android:layout_toRightOf="@+id/back_button"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="Add New Event"
        android:textColor="@color/grey"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/what"
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/task"
        android:layout_marginStart="20dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="20dp"
        android:text="Event name"
        android:textColor="@color/grey"
        android:textSize="20sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/edt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/what"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="6dp"
        android:background="@null"
        android:hint="title"
        android:textSize="20sp"
        android:textColor="#282729"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />


    <EditText
        android:id="@+id/eventDescriptionEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt1"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp"
        android:gravity="start"
        android:hint="Event description"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/date"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="Date"
        android:layout_below="@+id/eventDescriptionEditText"
        android:textColor="@color/grey"
        android:textSize="20sp"
        android:textStyle="bold" />

    <DatePicker
        android:id="@+id/datepicker"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_below="@+id/date"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="-5dp"
        android:backgroundTint="@color/grey"
        android:calendarViewShown="false"
        android:datePickerMode="spinner" />

    <TextView
        android:id="@+id/time"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="Time"
        android:layout_below="@+id/datepicker"
        android:textColor="@color/grey"
        android:textSize="20sp"
        android:textStyle="bold" />


    <TimePicker
        android:id="@+id/timepicker"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_below="@+id/time"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="-10dp"
        android:backgroundTint="@color/grey"
        android:timePickerMode="spinner" />

    <TextView
        android:id="@+id/venue"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timepicker"
        android:layout_marginStart="20dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="20dp"
        android:text="Venue"
        android:textColor="@color/grey"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/venuespin"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/venue"
        android:popupTheme="@style/CustomSpinnerDropdownItem"
        android:layout_marginStart="20dp"
        android:layout_marginTop="6dp"
        android:entries="@array/venue_names"
        android:layout_marginBottom="20dp"/>

    <Spinner
        android:id="@+id/citySpinner"
        android:layout_width="200dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content"
        android:entries="@array/tamil_nadu_cities"
        android:layout_below="@+id/venuespin"
        />



    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="30dp"
        android:backgroundTint="#656168"
        android:id="@+id/tick_button"
        android:src="@drawable/baseline_add_task_24"
        />

</RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>